<!DOCTYPE html>
<html lang="en">

<head>
    {{>links}}
    <title>saif website</title>
</head>

<body>

    {{>navbar}}

    <div class="container-fluid main-header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main-content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_Layer">
                        <p id="day">Tuesday</p>
                        <p id="todays_date">13 OCT</p>
                    </div>
                    <div class="main_Layer">
                        <p id="city_name_text">get output here </p>
                        <div class="middle_Layer data_hide" id="hide_data">
                            <p id="temp"><span id="temp_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i> </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{>footer}}
    <script src="js/index.js"></script>
</body>

</html>